{
    "extends": ["../../tsconfig.json"],

    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "noEmit": false,
        "composite": true,
        "allowImportingTsExtensions": false
    },
    "include": ["./src/**/*"]
}
